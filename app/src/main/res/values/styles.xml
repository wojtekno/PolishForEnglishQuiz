<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F4FF81</item>
    </style>

    <style name="AppHeader">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="QuestionHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="container_white">
        <item name="android:background">@drawable/options_container_white</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="container_red">
        <item name="android:background">@drawable/options_container_red</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


    <style name="answers_style">
        <item name="android:background">@drawable/options_container_red</item>
    </style>
    <style name="check_box_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="radio_button_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
